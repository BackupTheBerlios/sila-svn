#!/bin/sh
# $Id: libsila-config.in 23 2006-01-21 13:10:28Z choman $
# This script was borrowed from Gtk (and Glib)

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
cflags="-I@includedir@/oniria/sila"
cxxflags="-I@includedir@/oniria/sila"
libs="-L@libdir@ -lsila"

usage()
{
	cat <<EOF
Usage: sila-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
	[--cxxflags]
Libraries:
	sila
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_sila=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @SILA_MAJOR_VERSION@.@SILA_MINOR_VERSION@.@SILA_MICRO_VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --cxxflags)
      echo_cxxflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    sila)
      lib_sila=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
      # Include @includedir@ if it's in a non-standard place
      if test @includedir@ != /usr/include ; then
        cflags="$cflags -I@includedir@"
      fi
      echo $cflags
fi

if test "$echo_cxxflags" = "yes"; then
      # Include @includedir@ if it's in a non-standard place
      if test @includedir@ != /usr/include ; then
        cxxflags="$cxxflags -I@includedir@"
      fi
      echo $cxxflags
fi

if test "$echo_libs" = "yes"; then
      echo $libs
fi      

